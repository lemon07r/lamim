---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-xl py-1">Welcome to my personal website</div>
      <div class="text-5xl font-bold">I'm Lamim</div>
      <div class="text-3xl py-3 font-bold">Full Stack Developer and Application Operations Analyst</div>
      <div class="py-2">
        <text class="text-lg">
          This is my portfolio, feel free to take a look at my projects.
          </text
        >
      </div>
      <div class="mt-8">
        <a class="btn" href="mailto:rashid@lamim.me" target="_blank"> Email Me</a>
        <a href="https://github.com/lemon07r" target="_blank" class="btn btn-outline ml-5"> My Github</a>
      </div>
    </div>

    <div>
      <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
    </div>

    <HorizontalCard
      title="Evolution of JiangHu - AMA Translation Mod V2"
      img="/post_eoj.webp"
      desc="Community translation project for the game, Evolution of Jianghu. Brought to you by the Amateur Modding Avenue group."
      url="https://github.com/lemon07r/EvolutionOfJianghu-AMA-EnglishMod"
      badge="NEW"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="JDK PowerShell Installer Script"
    img="/post_pshjdk.webp"
    desc="A very robust, feature complete PowerShell script for easily installing any JDK from ZIP archive."
    url="https://github.com/lemon07r/JDK-PowerShell-Installer-Script"
    badge="FOSS"
  />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="SteamCMD GUI 2"
    img="/post_steamcmd.webp"
    desc="AvaloniaUI .NET 6.0 GUI client and interface for easily downloading steam workshop mods. Automatically downloads the steamCMD CLI from Valve's official CDN on startup."
    url="https://github.com/lemon07r/SteamCMD_GUI2"
    badge="FOSS"
  />


</BaseLayout>
